<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="me.zhengjie.modules.system.mapper.PermissionDao">

	<resultMap id="BaseResultMap" type="me.zhengjie.modules.system.domain.Permission">
		<id column="id" property="id" jdbcType="BIGINT" />
		<result column="name" property="name" jdbcType="VARCHAR" />
		<result column="pid" property="pid" jdbcType="BIGINT" />
		<result column="alias" property="alias" jdbcType="VARCHAR" />
		<result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
	</resultMap>

	<sql id="Base_Column_List">
		a.id, a.name, a.pid, a.alias, a.create_time
	</sql>
	
	<select id="findByRole" resultMap="BaseResultMap">
		select <include refid="Base_Column_List" />
		from sys_permission a
		inner join sys_roles_permissions rp on a.id = rp.permission_id
		where rp.role_id = #{roleId}
	</select>

</mapper>